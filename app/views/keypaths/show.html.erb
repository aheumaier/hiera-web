<%- model_class = Keypath -%>
<div class="page-header">
  <h1><%=t '.title', :default => @keypath.name.gsub(':', '/') %>/</h1>
</div>

<%- @keypath.keys?.each do |key|%>
<dl class="dl-horizontal">
  <dt><strong><%= key.split(':').last %>:</strong></dt>
  <dd><pre><%= @keypath.value?(key) %></pre></dd>
</dl>
<% end %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              keypaths_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_keypath_path(@keypath), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              keypath_path(@keypath),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
